<?php

use Drupal\views\ViewExecutable;
use Drupal\taxonomy\Entity\Term;

/**
 * Implements hook_views_post_render().
 */
function access_misc_views_post_render(ViewExecutable $view) {
  // Override view /admin/structure/views/view/resources/edit/page_2 title
  if ($view->id() == 'resources' && isset($view->getDisplay()->view->element['#display_id']) && $view->getDisplay()->view->element['#display_id'] == 'page_2' ) {
    $tid = $view->getTitle();
    if (term::load($tid)) {
      $title = 'Resources tagged ' . term::load($tid)->get('name')->value;
      // Set the view title.
      $view->setTitle($title);
      // Set the route title.
      $route = \Drupal::routeMatch()->getCurrentRouteMatch()->getRouteObject();
      $route->setDefault('_title', $title);
    }
  }
}

/**
 * Implements hook_entity_view_alter().
 */
function access_misc_entity_view(array &$build, \Drupal\Core\Entity\EntityInterface $entity, \Drupal\Core\Entity\Display\EntityViewDisplayInterface $display) {
  switch ($entity->getEntityTypeId()) {
    case 'eventseries':
      $date = $build['event_instances'][0]['#title'];
      $dates = explode(' - ', $date);
      preg_match('/(.*)([AP]M) (.*)/', $dates[0], $matches0, PREG_OFFSET_CAPTURE);
      preg_match('/([0-1]?[0-9]|2[0-3]):[0-5][0-9][AP]M.*/', $dates[1], $matches1, PREG_OFFSET_CAPTURE);
      $build['event_instances'][0]['#title'] = $matches0[1][0] . $matches0[2][0] . ' - ' . $matches1[0][0];
     break;
    case 'eventinstance':
      preg_match('/(.*)([AP]M) (.*)/',  $build['date'][0]['start_date']['#markup'], $date_start, PREG_OFFSET_CAPTURE);
      $build['date'][0]['start_date']['#markup'] = $date_start[1][0] . $date_start[2][0];
      preg_match('/([0-1]?[0-9]|2[0-3]):[0-5][0-9] [AP]M.*/', $build['date'][0]['end_date']['#markup'], $date_end, PREG_OFFSET_CAPTURE);
      $build['date'][0]['end_date']['#markup'] = $date_end[0][0];
      break;
  }
}
