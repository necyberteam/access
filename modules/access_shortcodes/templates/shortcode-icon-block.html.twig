{#
/**
 * @file
 * Default theme implementation for the icon_block shortcode.
 *
 * Available variables:
 * - icon: Font Awesome class string.
 * - img: url for image to display.
 * - alt: alt text for image.
 * - title: The heading text.
 * - link: link for the icon box.
 * - btnLink: optional href for button
 * - btnText: optional text for button
 */
#}
{% if link %}
<a href="{{ link }}" class="d-flex align-items-stretch">
{% endif %}
<div class="icon-box d-flex flex-column align-items-center justify-content-{{ boxed ? "center" : "start" }} {{ boxed }}">
    {% if icon %}
        <i class="fa-solid {{ icon }}"></i>
    {% endif %}
    {% if img %}
        <img src="{{ img }}" alt="{{ alt }}"/>
    {% endif %}
    <div class="icon-box-title text-center mt-1">{{ title }}</div>
    {% if text %}
        <div class="icon-box-text text-center text-muted small mt-2">{{ text }}</div>
    {% endif %}
    {% if btnlink and btntext %}
        <a class="btn btn-outline-dark mt-3" href="{{ btnlink }}">{{ btntext }}</a>
    {% endif %}
</div>
{% if link %}
</a>
{% endif %}
