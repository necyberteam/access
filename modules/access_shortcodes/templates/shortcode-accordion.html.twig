{#
/**
 * @file
 * Default theme implementation for the accordion shortcode.
 *
 * Available variables:
 * - summary: Summary of the accordion.
 * - text: Main text of the accordion.
 */
#}
{% set classes = "bg-#{color} ps-5 pe-10 py-4 text-lg font-extrabold leading-5 cursor-pointer" %}
<details class="border-0 open:bg-white duration-300 relative">
	<summary {{ attributes.addClass(classes) }}>{{ summary }}</summary>
	<div class="bg-white px-5 py-3">
		{{ text | raw }}
	</div>
</details>
